
subproject libs/wine/test ;

import testing ;

DEPENDS all : test ;

rule wine-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

test-suite wine :
    [ wine-test adl_barrier ]
    [ wine-test affect ]
    [ wine-test arraya ]
    [ wine-tets as ]
    [ wine-test at ]
