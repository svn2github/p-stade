
subproject libs/p_stade/test ;

import testing ;


DEPENDS all : test ;


rule p_stade-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(BOOST_ROOT)
        <include>$(PSTADE_ROOT)
    ] ;
}


test-suite p_stade :
    [ p_stade-test now ]
    ;
