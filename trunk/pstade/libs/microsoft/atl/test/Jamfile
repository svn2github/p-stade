

subproject libs/microsoft/atl/test ;


import testing ;


DEPENDS all : test ;


rule microsoft-atl-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(BOOST_ROOT)
        <include>$(PSTADE_ROOT)
    ] ;
}


test-suite microsoft-atl :
    [ microsoft-atl-test header ]
    [ microsoft-atl-test range ]
    ;
