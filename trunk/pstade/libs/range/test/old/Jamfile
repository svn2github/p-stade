
subproject libs/range/test/old ;

import testing ;


DEPENDS all : test ;


rule range-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}


test-suite range :
    [ range-test atl ]
    [ range-test mfc_ ]
    [ range-test wtl ]
    ;
