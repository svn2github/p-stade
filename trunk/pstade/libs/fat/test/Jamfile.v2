import testing ;

project
    : requirements
      <library>/boost/test//boost_test_exec_monitor/<link>static
      <library>/boost/test//boost_unit_test_framework/<link>static
    ;

test-suite "fat" :
    [ run always.cpp ]
    [ run auto_object.cpp ]
    [ run construct.cpp ]
    [ run constructor.cpp ]
    [ run copy.cpp ]
    [ run copy_assign.cpp ]
    [ run delete.cpp ]
    [ run delete_array.cpp ]
    [ run do_swap.cpp ]
    [ run functional.cpp ]
    [ run identity.cpp ]
    [ run is_same.cpp ]
    [ link multiple_defs1.cpp multiple_defs2.cpp : : multiple_defs ]
    [ run new.cpp ]
    [ run new_array.cpp ]
    [ run new_auto.cpp ]
    [ run new_ptr.cpp ]
    [ run new_shared.cpp ]
    [ run new_shared_array.cpp ]
    [ run shared_object.cpp ]
    [ run static_downcast.cpp ]
    [ run-fail static_downcast_fail.cpp ]
    [ run to_ref.cpp ]
    [ run to_value.cpp ]
    [ run tuple_element.cpp ]
    [ run tuple_get.cpp ]
    [ run tuple_size.cpp ]
    ;

