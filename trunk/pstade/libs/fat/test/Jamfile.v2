import testing ;

project
    : requirements
      <library>/boost/test//boost_test_exec_monitor/<link>static
      <library>/boost/test//boost_unit_test_framework/<link>static
    ;

test-suite "fat" :
    [ run always.cpp ]
    [ run construct.cpp ]
    [ run copy.cpp ]
    [ run copy_assign.cpp ]
    [ run functional.cpp ]
    [ run identity.cpp ]
    [ run is_same.cpp ]
    [ link multiple_defs1.cpp multiple_defs2.cpp : : multiple_defs ]
    [ run to_ref.cpp ]
    [ run to_value.cpp ]
    [ run tuple.cpp ]
    ;

