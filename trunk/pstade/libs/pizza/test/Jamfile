
subproject libs/pizza/test ;

import testing ;

DEPENDS all : test ;

rule pizza-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite pizza :
    [ pizza-test functions ]
    [ pizza-test header ]
    ;
