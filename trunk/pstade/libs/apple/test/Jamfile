
subproject libs/apple/test ;

import testing ;

DEPENDS all : test ;

rule apple-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite apple :
    [ apple-test is_boost_range ]
    [ apple-test is_sequence ]
    [ apple-test header ]
    ;
