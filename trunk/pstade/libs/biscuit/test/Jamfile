
subproject libs/biscuit/test ;

import testing ;

DEPENDS all : test ;

rule biscuit-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(BOOST_ROOT)
        <include>$(PSTADE_ROOT)
        <include>$(MINGW_INCLUDE_DIRECTORY)
    ] ;
}

test-suite biscuit :
    [ biscuit-test actor ]
    [ biscuit-test and ]
    [ biscuit-test any ]
    [ biscuit-test as_lower ]
    [ biscuit-test before_after ]
    [ biscuit-test begin_end ]
    [ biscuit-test capture ]
    [ biscuit-test control ]
    [ biscuit-test debug ]
    [ biscuit-test eps ]
    [ biscuit-test error ]
    [ biscuit-test filter_range ]
    [ biscuit-test ichseq ]
    [ biscuit-test identity ]
    [ biscuit-test literal ]
    [ biscuit-test match ]
    [ biscuit-test min_max_repeat ]
    [ biscuit-test rngseq ]
    [ biscuit-test rngset ]
    [ biscuit-test repeat ]
    [ biscuit-test require ]
    [ biscuit-test search ]
    [ biscuit-test shortest_longest ]
    [ biscuit-test sol_eol ]
    [ biscuit-test symbols ]
    [ biscuit-test token_range ]
    ;
