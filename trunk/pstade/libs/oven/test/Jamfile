
subproject libs/oven/test ;

import testing ;

DEPENDS all : test ;

rule oven-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

rule oven-compile ( name )
{
    return [
        compile $(name).cpp
        :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

rule oven-compile-fail ( name )
{
    return [
        compile-fail $(name).cpp
        :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

test-suite oven :
    [ oven-test adapted_to_base ]
    [ oven-test adjacent_filtered ]
    [ oven-test adjacent_transformed ]
    [ oven-test advanced ]
    [ oven-test algorithm ]
