
subproject libs/oven/test ;

import testing ;

DEPENDS all : test ;

rule oven-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

rule oven-compile ( name )
{
    return [
        compile $(name).cpp
        :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}

test-suite oven :
    [ oven-test adjacent_filter_range ]
    [ oven-test adaptor_to_base ]
    [ oven-test algorithm ]
