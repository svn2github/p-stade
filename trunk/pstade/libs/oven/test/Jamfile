
subproject libs/oven/test ;

import testing ;

DEPENDS all : test ;

rule oven-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(BOOST_ROOT)
        <include>$(PSTADE_ROOT)
    ] ;
}

rule oven-compile ( name )
{
    return [
        compile $(name).cpp
        :
        <include>$(BOOST_ROOT)
        <include>$(PSTADE_ROOT)
    ] ;
}

test-suite oven :
    [ oven-test adjacent_filter_range ]
    [ oven-test algorithm ]
    [ oven-test apply_range ]
    [ oven-test array_range ]
    [ oven-test array_protect_range ]
    [ oven-test check_range ]
    [ oven-test clear_range ]
    [ oven-test copy_range ]
    [ oven-test constant_range ]
    [ oven-test counting_range ]
    [ oven-test direct_range ]
    [ oven-test doc ]
    [ oven-test drop_range ]
    [ oven-test empty_range ]
    [ oven-test file_range ]
    [ oven-test filter_range ]
    [ oven-test find_range ]
    [ oven-test identity_range ]
    [ oven-test indirect_range ]
    [ oven-test istream_range ]
    [ oven-test joint_range ]
    # [ oven-test mb_decode_range ]
    # [ oven-test mb_encode_range ]
    [ oven-test memoize_range ]
    [ oven-test null_terminate_range ]
    [ oven-test permute_range ]
    [ oven-test point_range ]
    [ oven-test position_range ]
    [ oven-test repeat_range ]
    [ oven-test reverse_range ]
    [ oven-test share_range ]
    [ oven-test single_range ]
    [ oven-test slice_range ]
    [ oven-test sort_range ]
    [ oven-test sub_set ]
    [ oven-test tab_expand_range ]
    [ oven-test tab_unexpand_range ]
    [ oven-test take_range ]
    [ oven-test transform_range ]
    [ oven-test unique_range ]
    [ oven-test unzip_range ]
    [ oven-test zip_range ]
    ;
