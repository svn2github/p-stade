
subproject libs/oven/test/ms ;

import testing ;


DEPENDS all : test ;


rule oven-ms-test ( name )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)
        <include>$(BOOST_ROOT)
    ] ;
}


test-suite range :
    [ oven-ms-test atl ]
    [ oven-ms-test mfc ]
    [ oven-ms-test wtl ]
    ;
