
subproject libs/diet/test ;

import testing ;

DEPENDS all : test ;

rule diet-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite diet :
    [ diet-test is_valid ]
    [ diet-test header ]
    ;
