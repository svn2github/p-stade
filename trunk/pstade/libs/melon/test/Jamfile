
subproject libs/melon/test ;

import testing ;

DEPENDS all : test ;

rule melon-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite melon :
    [ melon-test basic ]
    [ melon-test header ]
    ;
