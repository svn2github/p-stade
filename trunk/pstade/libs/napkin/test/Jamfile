
subproject libs/napkin/test ;

import testing ;

DEPENDS all : test ;

rule napkin-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite napkin :
    [ napkin-test basic ]
    [ napkin-test doc ]
    [ napkin-test format ]
    ;
