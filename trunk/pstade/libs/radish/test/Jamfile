
subproject libs/radish/test ;

import testing ;

DEPENDS all : test ;

rule radish-test ( name : includes * )
{
    return [
        run $(name).cpp
        : : :
        <include>$(PSTADE_ROOT)        
        <include>$(BOOST_ROOT)

    ] ;
}

test-suite radish :
    [ radish-test boolean ]
    [ radish-test header ]
    [ radish-test input_output_streamable ]
    ;
