        [A braced initializer of `result_of_ambi##N<_PFo,...>::type`]
    ]
    [
        [`BOOST_EGG_AMBI(I)`]
        [`BOOST_EGG_AMBI_L I BOOST_EGG_AMBI_R`]
    ]
    [
        [`o|fc(d, _Bytag)(a1,...,aN)`]
        [`_const(d)(_fwd_arg_list([o]++a, _Bytag))`]
    ]
    [
        [`X_ambi##N<_Bytag = _ud>`]
        [A __EGG_MAJOR_FUNCTION_OBJECT__ type]
    ]
