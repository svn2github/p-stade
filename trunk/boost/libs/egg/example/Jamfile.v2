import testing ;

project
    : requirements
        <toolset>intel:<debug-symbols>off
        <toolset>msvc-7.1:<debug-symbols>off
        <toolset>gcc:<cxxflags>-ftemplate-depth-1024
    ;

rule examples
{
    local r ;

    for local f in [ glob *.cpp ]
    {
        switch $(f)
        {
            case *_noglob.cpp :
                # skip
            case *.cpp :
                r += [ run $(f) ] ;
        }
    }

    return $(r) ;
}

test-suite "egg_example"
    :
        [ examples ]
    ;

