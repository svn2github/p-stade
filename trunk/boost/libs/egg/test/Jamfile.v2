import testing ;
import set ;

project
    : requirements
        <toolset>intel:<debug-symbols>off
        <toolset>msvc-7.1:<debug-symbols>off
        <toolset>gcc:<cxxflags>-ftemplate-depth-1024
        <library>/boost/test//boost_test_exec_monitor
        <library>/boost/test//boost_unit_test_framework
        <link>static
    ;

rule tests
{
    local r ;

    for local f in [ set.difference [ glob *.cpp ] : [ glob noglob_*.cpp ] ]
    {
        switch $(f)
        {
            case run_fail_*.cpp :
                r += [ run-fail $(f) ] ;
            case compile_fail_*.cpp :
                r += [ compile-fail $(f) ] ;
            case compile_*.cpp :
                r += [ compile $(f) ] ;
            case typeof_with_*.cpp :
                    r += [ run $(f) ] ;
                    r += [ run $(f) : : : <define>BOOST_TYPEOF_EMULATION : emulated_$(f:B) ] ;
            case * :
                r += [ run $(f) ] ;
        }
    }

    return $(r) ;
}

test-suite "egg"
    :
        [ tests ]
    #    [ run noglob_large_arity.cpp ]
    #    [ run noglob_inlined_perf.cpp : : : : : <variant>release ]
    #    [ run noglob_inlined_mem_perf.cpp : : : : : <variant>release ]
        [ link noglob_static_initialization1.cpp noglob_static_initialization2.cpp : : static_initialization ]
        [ link noglob_multiple_defs1.cpp noglob_multiple_defs2.cpp : : multiple_defs ]
    ;

